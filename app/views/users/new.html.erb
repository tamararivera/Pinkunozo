<% provide(:title, 'Registro') %>
<div class="well">
  <h1>Registrate</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
  			
  			<%= render 'shared/error_messages', object: f.object%>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Crear cuenta", class: "btn btn-lg btn-primary" %>
      <% end %>
    </div>
  </div>
</div>